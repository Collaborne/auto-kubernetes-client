{
	"env": {
		"commonjs": true,
		"es6": true,
		"node": true
	},
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": false
		},
		"sourceType": "module"
	},

	"extends": "eslint-config-collaborne",

	"overrides": [
		{
			"files": "examples/*/index.js",

			"parserOptions": {
				"sourceType": "script"
			}
		},
		{
			"files": "src/index.js",

			"rules": {
				"sort-keys": "warn"
			}
		}
	]
}
